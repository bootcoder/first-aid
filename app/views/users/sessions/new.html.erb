<div class="container">
  <div class="row">
    <div class="col-lg-offset-2 col-lg-8 sign-in">
      <img src="/assets/logo-tagline-712029fa759a9065f629c28253e5552ce5d184e157d96ba0efe3191d3449c447.svg" class="sign-in-image center-block" alt="Firs+Aid Logo"/>
      <h2 class="text-center">Login</h2>
      <div class="col-lg-5 regular-login">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form') do |f| %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="checkbox">
              <label for="remember_me">
              <input type="hidden" name="user[remember_me] value="0" ">
              <input class="checkbox" type="checkbox" value="1" name="user[remember_me]" id="user_remember_me"> Remember Me
              </label>
            </div>
          <% end -%>

          <div class="text-center">
            <%= f.submit "Log In", class: 'btn btn-success', id: 'sign-in-button' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
      <div class="col-lg-2 login-separator text-center">
        <h1>or</h1>
      </div>
      <div class="col-lg-5 facebook-login">
        <%= link_to(image_tag('/assets/facebook-f3a1af316dd7e59c94ab0999c30ed649c872e1e6f723eb1c28620bce2d43eb29.svg', alt: 'Login with Facebook'), omniauth_authorize_path(resource_name, :facebook)) %>
      </div>
    </div>
  </div>
</div>
